        <li><a href="#"><i class="fa fa-database"></i> 数据源管理</a></li>
        <li><a href="#">总览</a></li>
    </ol>
</section>
<section class="content">
    <!-- Modal -->
    <div class="modal fade" id="modelAddMysql" tabindex="-1" role="dialog" aria-labelledby="labelAddMysql">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form class="form-horizontal">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h4 class="modal-title" id="labelAddMysql">
                            添加Oracle数据库
                        </h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="oracleURL" class="col-sm-offset-1 col-sm-3 control-label">数据库地址</label>
                            <div class="col-sm-7">
                                <input type="url" class="form-control" id="oracleURL" placeholder="数据库地址">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="oraclePort" class="col-sm-offset-1 col-sm-3 control-label">数据库端口号</label>
                            <div class="col-sm-7">
                                <input type="number" class="form-control" id="oracleURL" placeholder="数据库端口号">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="oracleDatabase" class="col-sm-offset-1 col-sm-3 control-label">数据库名称</label>
                            <div class="col-sm-7">
                                <input type="text" class="form-control" id="oracleDatabase" placeholder="数据库名称">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="oracleUser" class="col-sm-offset-1 col-sm-3 control-label">数据库用户名</label>
                            <div class="col-sm-7">
                                <input type="text" class="form-control" id="oracleUser" placeholder="数据库用户名">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="oraclePassword" class="col-sm-offset-1 col-sm-3 control-label">数据库密码</label>
                            <div class="col-sm-7">
                                <input type="password" class="form-control" id="oraclePassword" placeholder="数据库密码">
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                        <button type="submit" class="btn btn-primary">连接</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <%- include('modules/table.ejs', {table: table_warehouse}); %>
        </div>
